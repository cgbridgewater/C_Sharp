<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wedding Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/weddingPlanner.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @{
                    if( @Context.Session.GetInt32("UserId") == null){
                        <h1 class="text-light ms-5 me-5">Wedding Planner</h1>
                    }
                }
                @{
                    if( @Context.Session.GetInt32("UserId") != null){
                <h1 class="Uppercase text-light ms-5 me-5">Welcome @ViewBag.LoggedUser.FirstName  </h1>
                    }
                }
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end px-5">
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Weddings">Home</a>
                        </li>
                        <li class="nav-link text-primary">|</li>
                        @{
                            if( @Context.Session.GetInt32("UserId") == null){
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                                </li>
                            }
                        }
                        @{
                            if( @Context.Session.GetInt32("UserId") != null){
                                <li class="nav-item d-flex">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="PlanWedding">Plan A Wedding</a>
                                        <li class="nav-link text-primary">|</li>
                                        <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Logout">Log Out</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - C# Wedding Planner
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
