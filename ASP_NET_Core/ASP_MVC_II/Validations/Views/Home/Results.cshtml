
@{
    ViewData["Title"] = "Results";
    string birthday = @Model.Birthday.ToString("MMMM d") + (@Model.Birthday.Day == 1 ? "st" : (@Model.Birthday.Day == 2 ? "nd" : (@Model.Birthday.Day == 3 ? "rd" : "th"))) + @Model.Birthday.ToString(", yyyy");
}
@model User

<h1 class="Center">@ViewData["Title"]</h1>

    <div class="ResultsContainer">
        <H2 class="Center">Submitted Info</H2>
        <div class="Flex">
            <h3>Name:</h3>
            <h3>@Model.Name</h3>
        </div>

        <div class="Flex">
            <h3>Email:</h3>
            <h3>@Model.Email</h3>
        </div>

        <div class="Flex">
            <h3>Birthday:</h3>
            <h3>@birthday</h3>
        </div>

        <div class="Flex">
            <h3>Birthday:</h3>
            <h3>@Model.OddNumber</h3>
        </div>


    </div>
    <div class="LinkContainer">
        <a class="End Button nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Go Home</a>
    </div>
